<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Snapshot" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarThumbVertical">@color/white</item>
    </style>

    <style name="hints_title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="hints_content" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">start|top</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
</resources>